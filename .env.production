# Production Environment Configuration
# Copy this to .env and fill in the values

# Flask Configuration
SUPPORT_SECRET_KEY=your-secret-key-here-change-this
FLASK_ENV=production

# Database Configuration (Render will provide this automatically)
# Format: postgresql://user:password@host:port/database
SUPPORT_DATABASE_URL=postgresql://user:password@host:5432/support_dashboard

# Client App Integration
# Update this with your deployed client app URL
CLIENT_API_URL=https://your-client-app-url.com/api

# API Keys for inter-app communication
SUPPORT_API_KEY=your-support-api-key-here
